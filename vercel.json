{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "dist" }
    }
  ],
  "routes": [
    // Route for static JS and CSS files
    { "src": "/assets/(.*)", "dest": "/dist/assets/$1" },
    { "src": "/(.*).js", "dest": "/dist/$1.js" },
    { "src": "/(.*).css", "dest": "/dist/$1.css" },
    
    // Route everything else to index.html (for Single Page Application)
    { "src": "/(.*)", "dest": "/dist/index.html" }
  ]
}
